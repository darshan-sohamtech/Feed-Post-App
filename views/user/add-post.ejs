<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <%- include('../partials/head') %>
    <title>Add Post</title>
  </head>
  <body>
    <%- include('../partials/user/nav') %>
    <script type="text/javascript">
      window.setTimeout(
        "document.getElementById('flash-message').style.display='none';",
        3000
      );
    </script>
    <% if (message.length > 0) { %>
    <div class="alert alert-dark text-center" id="flash-message">
      <%= locals.message %> &nbsp;&nbsp;<i
        class="fa-solid fa-circle-xmark text-center"
        onclick="closeMsg()"
      ></i>
    </div>
    <% } %>
    <div class="container">
      <a href="/post/dashboard" class="btn btn-primary my-2"
        >Back To All Post</a
      >
      <div class="my-3 text-center">
        <hr class="border border-white" />
        <h1>
          <i class="fa-solid fa-hands-holding"></i>&nbsp;Add Post&nbsp;<i
            class="fa-solid fa-hands-holding"
          ></i>
        </h1>
        <hr class="border border-white" />
      </div>
      <form action="/post/add-post" method="post">
        <div class="mb-3">
          <label for="postname" class="form-label">Post-Title</label>
          <input
            type="text"
            class="form-control"
            id="postname"
            name="postname"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description">Description</label>
          <textarea
            name="description"
            class="form-control"
            id="description"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <button class="btn btn-primary">Add Post</button>
          &nbsp;
          <a href="/post/dashboard" class="btn btn-outline-dark"
            >Back To All Post</a
          >
        </div>
      </form>
    </div>

    <%- include('../partials/scripts') %>
  </body>
</html>
