<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <%- include('../partials/head') %>
    <title>My Post</title>
  </head>

  <body>
    <%- include('../partials/user/nav') %>
    <script type="text/javascript">
      window.setTimeout(
        "document.getElementById('flash-message').style.display='none';",
        3000
      );
    </script>
    <% if (message.length > 0) { %>
    <div class="alert alert-dark text-center" id="flash-message">
      <%= locals.message %> &nbsp;&nbsp;<i
        class="fa-solid fa-circle-xmark text-center"
        onclick="closeMsg()"
      ></i>
    </div>
    <% } %>
    <div class="container mt-3">
      <a class="btn btn-primary mb-2" href="/post/add-post">+ Add New Post</a>
      <a href="/post/dashboard" class="btn btn-primary mb-2"
        >Back To All Post</a
      >
      <div class="my-3 text-center">
        <hr class="border border-white" />
        <h1>
          <i class="fa-solid fa-hands-holding"></i>&nbsp;Post-List&nbsp;<i
            class="fa-solid fa-hands-holding"
          ></i>
        </h1>
        <hr class="border border-white" />
      </div>
      <div class="row row-cols-md-3 row-cols-sm-2 container-fluid">
        <% posts.forEach(post => { %>
        <div class="container px-5 text-center">
          <div class="card mt-3">
            <div class="card-header"><%= post.createdBy.fullname %></div>
            <div class="card-body">
              <h5 class="card-title"><%= post.postname %></h5>
              <p class="card-text"><%= post.description %></p>
              <a href="/post/<%= post._id %>" class="btn btn-primary"
                >View More</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('../partials/scripts') %>
  </body>
</html>
